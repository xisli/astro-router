          <linearGradient id="paint0_linear_1_3" x1="48.1997" y1="1.80767" x2="31.9303" y2="57.7933"
            gradientUnits="userSpaceOnUse">
            <stop stop-color="white" />
            <stop offset="1" stop-color="#F9FAFB" />
          </linearGradient>
          <linearGradient id="paint1_linear_1_3" x1="56.112" y1="43.4967" x2="42.0217" y2="72.994"
            gradientUnits="userSpaceOnUse">
            <stop stop-color="#FF1639" />
            <stop offset="1" stop-color="#FF1639" stop-opacity="0" />
