---
import { Link } from 'astro-router'
---

<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>Welcome to Astro Router</title>
</head>

<body class="bg-gray-50">
	<div>
		<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
			<h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
				<span class="block">Astro Router</span>
				<span class="block text-indigo-600">Extened Astro Routing</span>
			</h2>
			<div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
				<div class="inline-flex rounded-md shadow">
					<Link to="/there" query={{ using: 'Link' }} prefetch={true}
						class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
					Link Navigation</Link>
				</div>
				<div class="ml-3 inline-flex rounded-md shadow">
					<button id="btn"
						class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50">Router
						Navigation</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		import { router } from "astro-router"

		const btn = document.getElementById('btn')
		router.prefetch('/there', { using: 'router' })
		btn.onclick = function () {
			router.push('there', { using: 'router' })
		};

	</script>
</body>

</html>